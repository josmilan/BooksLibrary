<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/roundcorner_grey_background">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
        <TextView
                android:id="@+id/tvBookname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:text="Healthy prostate"
                android:textColor="@color/colorAccent"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
        />

        <TextView
                android:id="@+id/tvBookDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                android:text="This method does have it's flaws which I why I took @Tam Huynh's advice and researched the ViewFlipper. In this case however I used an AdapterViewFlipper. This allowed me to build a custom adapter where I could dynamically add views based on what data I was receiving."
                android:ellipsize="end"/>

    </LinearLayout>
    <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp">
        <ImageView
                android:id="@+id/ivBookCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_book9"/>
    </android.support.v7.widget.CardView>

</LinearLayout>
