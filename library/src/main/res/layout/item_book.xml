<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/llBack"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@drawable/bottom_center"
              android:gravity="center"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_gravity="center"
                  android:padding="5dp">

        <FrameLayout
                android:id="@+id/flMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="5dp">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent">
                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <ImageView android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:id="@+id/iv_book"
                                   android:src="@drawable/ic_book"
                                   android:layout_gravity="center"
                                   android:scaleType="centerCrop"/>
                        <View android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:background="@color/transBlack"/>
                    </FrameLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <TextView
                    android:id="@+id/tvBookCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="50+"
                    android:layout_gravity="end"
                    android:elevation="0dp"
                    android:textSize="@dimen/text_size_small"
                    android:drawableStart="@drawable/ic_books_count"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:layout_marginTop="15dp"/>
            <TextView
                    android:id="@+id/tvCategoryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:textSize="@dimen/text_size_small"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:background="@drawable/textview_colored_back"
                    android:text="Check out the documentation for pages on "/>

            <TextView
                    android:id="@+id/tvFirstChar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="S"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_size_medium"
                    android:background="@drawable/color_character_background"/>

        </FrameLayout>

    </LinearLayout>


</LinearLayout>
